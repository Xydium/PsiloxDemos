VERTEX:

#version 120

uniform float time;

varying vec4 color;

void main() {
	gl_Position = projection_transform * (gl_Vertex + vec4(sin(gl_Vertex.x * time) * 3, cos(gl_Vertex.y + time) * 3, 0, 0));
	color = gl_Color;
}

FRAGMENT:

#version 120

varying vec4 color;

void main() {
	gl_FragColor = color;
}